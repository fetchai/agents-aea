{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Schema for the skill configuration file.",
  "additionalProperties": false,
  "type": "object",
  "required": [
    "name",
    "author",
    "version",
    "license",
    "url",
    "protocols"
  ],
  "properties": {
    "name": {
      "$ref": "definitions.json#/definitions/resource_name"
    },
    "author": {
      "$ref": "definitions.json#/definitions/author"
    },
    "version": {
      "type": "string"
    },
    "license": {
      "type": "string"
    },
    "fingerprint": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "protocols": {
      "type": "array",
      "additionalProperties": false,
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "handlers": {
      "type": "object",
      "additionalProperties": false,
      "uniqueItems": true,
      "patternProperties": {
        "^[^\\d\\W]\\w*\\Z": {
          "$ref": "#/definitions/handler"
        }
      }
    },
    "behaviours": {
      "type": "object",
      "uniqueItems": true,
      "patternProperties": {
        "^[^\\d\\W]\\w*\\Z": {
          "$ref": "#/definitions/behaviour"
        }
      }
    },
    "tasks": {
      "type": "object",
      "uniqueItems": true,
      "patternProperties": {
        "^[^\\d\\W]\\w*\\Z": {
          "$ref": "#/definitions/task"
        }
      }
    },
    "shared_classes": {
      "type": "object",
      "uniqueItems": true,
      "patternProperties": {
        "^[^\\d\\W]\\w*\\Z": {
          "$ref": "#/definitions/shared_class"
        }
      }
    },
    "ledgers": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "dependencies": {
      "$ref": "definitions.json#/definitions/dependencies"
    },
    "description": {
      "type": "string"
    }
  },
  "definitions": {
    "behaviour": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "class_name"
      ],
      "properties": {
        "class_name": {
          "type": "string"
        },
        "args": {
          "type": "object"
        }
      }
    },
    "task": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "class_name"
      ],
      "properties": {
        "class_name": {
          "type": "string"
        },
        "args": {
          "type": "object"
        }
      }
    },
    "handler": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "class_name"
      ],
      "properties": {
        "class_name": {
          "type": "string"
        },
        "args": {
          "type": "object"
        }
      }
    },
    "shared_class": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "class_name"
      ],
      "properties": {
        "class_name": {
          "type": "string"
        },
        "args": {
          "type": "object"
        }
      }
    }
  }
}
